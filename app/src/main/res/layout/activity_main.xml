<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/food_img"
        android:layout_width="224px"
        android:layout_height="224px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_img" />
    <Button
        android:id="@+id/classify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classify image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_img" />
    <TextView
        android:id="@+id/predict_text"
        android:text="Please select an image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/classify_button"
        app:layout_constraintLeft_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>